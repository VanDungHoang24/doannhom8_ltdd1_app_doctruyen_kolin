<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="357dp"
        android:layout_height="257dp"
        android:layout_gravity="center"
        android:translationY="50dp"
        android:scaleType="fitXY"
        android:background="@drawable/radius"
        android:clipToOutline="true"
        app:srcCompat="@drawable/img" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="40dp"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rdoUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:textColor="#3A5FCD"
                />
            <RadioButton
                android:id="@+id/rdoAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:textColor="#3A5FCD"
                android:checked="true"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        >
        <EditText
            android:id="@+id/edtGmail"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="#362196F3"
            android:layout_weight="1"
            android:hint=" Email"
            android:padding="12dp"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#362196F3"
            android:hint=" Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/IMG_hienthi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="#362196F3"
            android:src="@drawable/open_password"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tvDangKy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvQuenMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginLeft="118dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Đăng Nhập "
        android:background="@drawable/radius_dangnhap"
        android:textColorHint="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuyện tranh online"
            android:textAlignment="center"
            android:textColor="#3A5FCD"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>