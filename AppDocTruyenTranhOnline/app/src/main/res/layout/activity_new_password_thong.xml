<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"

    >

    <!-- Image View at the top -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="357dp"
        android:layout_height="257dp"
        android:layout_gravity="center"
        android:translationY="50dp"
        android:scaleType="fitXY"
        android:background="@drawable/radius"
        android:clipToOutline="true"
        app:srcCompat="@drawable/img" />

    <!-- LinearLayout for Password and Eye Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <EditText
            android:id="@+id/edtNewPassword"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#362196F3"
            android:hint="Password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/img_ShowPassword"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="#362196F3"
            android:src="@drawable/open_password"
            />
    </LinearLayout>

    <!-- EditText for Confirm Password -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <EditText
            android:id="@+id/edtComfirmPassword"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#362196F3"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/img_ShowPassword2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="#362196F3"
            android:src="@drawable/open_password"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

    </LinearLayout>


    <Button
        android:id="@+id/btnXacThuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Đăng ký"
        android:textColor="@color/white"
        android:background="@drawable/radius_dangnhap"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuyện tranh online"
            android:textColor="#3A5FCD"
            android:textSize="15sp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
